                            android:id="@+id/txt2"
                            android:layout_width="152dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt1"
                            android:layout_marginLeft="-180dp"
                            android:layout_toRightOf="@id/image1"
